<Page loaded="load">
  <StackLayout orientation="vertical">

    <Image src="res://logo" class="app-logo" horizontalAlignment="center"></Image>

    <TextField text="{{ email }}" hint="Adresse email" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
    <TextField text="{{ password }}" hint="Mot de passe" secure="true"/>

    <Button text="S'inscrire" class="btn-primary" tap="register"/>
    <Button text="Se connecter" class="btn-link" tap="login"/>

  </StackLayout>
</Page>
